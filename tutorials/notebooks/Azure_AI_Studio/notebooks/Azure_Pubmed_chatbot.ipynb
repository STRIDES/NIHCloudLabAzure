  {
   "cell_type": "code",
   "execution_count": 84,
   "id": "43cdc419-25e5-4ba8-b836-a13b2ad77a26",
   "metadata": {
    "collapsed": false,
    "gather": {
     "logged": 1701806019922
    },
    "jupyter": {
     "outputs_hidden": false,
     "source_hidden": false
    },
    "nteract": {
     "transient": {
      "deleting": false
     }
    },
    "scrolled": true,
    "tags": []
   },
   "outputs": [],
   "source": [
